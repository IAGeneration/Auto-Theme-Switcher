{
  "name": "auto-theme-switcher",
  "displayName": "Auto Theme Switcher",
  "description": "Automatically switch VS Code theme based on time of day",
  "version": "1.0.6",
  "icon": "auto-theme-switcher.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "theme",
    "auto",
    "switch",
    "time",
    "dark",
    "light",
    "automatic",
    "day",
    "night"
  ],
  "publisher": "djidjelli-youcef",
  "repository": {
    "type": "git",
    "url": "git@github.com:IAGeneration/Auto-Theme-Switcher.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-theme-switcher.toggleTheme",
        "title": "Auto Theme: Toggle Light/Dark Theme"
      },
      {
        "command": "auto-theme-switcher.toggleAutoSwitch",
        "title": "Auto Theme: Toggle Auto Switch"
      },
      {
        "command": "auto-theme-switcher.switchNow",
        "title": "Auto Theme: Switch Now"
      },
      {
        "command": "auto-theme-switcher.configure",
        "title": "Auto Theme: Configure"
      },
      {
        "command": "auto-theme-switcher.selectLightTheme",
        "title": "Auto Theme: Select Light Theme"
      },
      {
        "command": "auto-theme-switcher.selectDarkTheme",
        "title": "Auto Theme: Select Dark Theme"
      }
    ],
    "configuration": {
      "title": "Auto Theme Switcher",
      "properties": {
        "autoThemeSwitcher.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable/disable automatic theme switching based on time",
          "order": 0
        },
        "autoThemeSwitcher.lightTheme": {
          "type": "string",
          "default": "Default Light Modern",
          "markdownDescription": "Theme to use during daytime ‚òÄÔ∏è\n\n**üìù To select a theme:**\n1. Press `Ctrl+Shift+P` (or `Cmd+Shift+P` on Mac)\n2. Type: `Auto Theme: Select Light Theme`\n3. Choose from your installed themes\n\n*Note: VS Code doesn't support dropdown menus in settings, so use the command above to get a visual picker with all your themes.*",
          "order": 1
        },
        "autoThemeSwitcher.darkTheme": {
          "type": "string",
          "default": "Default Dark Modern",
          "markdownDescription": "Theme to use during nighttime üåô\n\n**üìù To select a theme:**\n1. Press `Ctrl+Shift+P` (or `Cmd+Shift+P` on Mac)\n2. Type: `Auto Theme: Select Dark Theme`\n3. Choose from your installed themes\n\n*Note: VS Code doesn't support dropdown menus in settings, so use the command above to get a visual picker with all your themes.*",
          "order": 2
        },
        "autoThemeSwitcher.lightThemeStartHour": {
          "type": "number",
          "default": 7,
          "minimum": 0,
          "maximum": 23,
          "markdownDescription": "Hour when light theme activates (0-23) üåÖ",
          "order": 3
        },
        "autoThemeSwitcher.darkThemeStartHour": {
          "type": "number",
          "default": 19,
          "minimum": 0,
          "maximum": 23,
          "markdownDescription": "Hour when dark theme activates (0-23) üåô",
          "order": 4
        },
        "autoThemeSwitcher.checkInterval": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 60,
          "markdownDescription": "How often to check and switch themes (in minutes) ‚è±Ô∏è",
          "order": 5
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  }
}

